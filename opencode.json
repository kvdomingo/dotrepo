{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1",
      },
      "models": {
        "qwen3-coder:30b-24k": {
          "name": "Qwen3-Coder",
          "tool_call": true
        },
        "gpt-oss:latest": {
          "name": "GPT OSS",
          "tool_call": true
        },
        "mistral-nemo:latest": {
          "name": "Mistral NeMo",
          "tool_call": true
        }
      }
    }
  },
  "permission": {
    "*": "ask",
    "skill": {
      "*": "allow"
    }
  },
  "theme": "catppuccin",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "envsitter-guard@latest",
    "opencode-agent-memory@latest",
    "opencode-agent-skills@latest",
    "opencode-wakatime@latest"
  ]
}
